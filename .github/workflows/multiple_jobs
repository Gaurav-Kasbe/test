name: My First Workflow

on: [push]

jobs:
 Build:
   runs-on: ubuntu-latest

  steps:
    - name: Code Checkout Repo
      uses: actions/checkout@v5

    - name: Building
      run: |
        echo "Building....."
        sleep 10

 Test:
   runs-on: ubuntu-latest
   needs: Build

  steps:
    - name: Testing
      run: |
       echo "Testing......,,,"
       sleep 5

 Deploy:
   runs-on: ubuntu-latest
   needs: Test

  steps:
    - name: Deployment
      run: |
       echo "Deploying......"
       sleep 5